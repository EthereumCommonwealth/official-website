.team-container
  padding: 5.5% 8% 5.5% 8%
  background-color: $white
  .team-members-container
    flex-row()
    justify-content: space-evenly
    margin: 60px 0
    div
      width: 260px
      height: 560px
      margin: 0 10px 20px 10px
      flex-column(nowrap)
      align-items: center
      p
        margin: 5px
      img
        width: 140px
        height: 140px
        border-radius: 50%
      .name
        margin-top: 25px
        margin-bottom: 25px
        font-weight: 500
        font-size: 20px
        color: $secondary-color
      .description
        text-align: center
      .team-member-social
        height: 25px
        margin-top: 10px
        flex-row(nowrap)
        justify-content: center
        &-item
          flex-row(nowrap)
          border: 1px solid $medium-grey
          color: $medium-grey
          align-items: center
          justify-content: center
          padding: 0.5em
          border-radius: 100%
          font-size: 14px
          margin: 0 4px
          text-decoration: none
          transition: all 150ms ease
          &:hover
            color: $white
            background-color: $medium-grey

.footer
  p
    color: $light-grey
    margin-top: 40px
    font-size: $footer-year-font-size
  background-color: $medium-grey
  padding: 40px 8% 40px 8%
  +below($xs)
    padding: 40px 10px 40px 10px
  .flex-wrapper
    flex-row()
    align-items: center
    .logo-wrapper
      margin-right: auto
      flex-row(nowrap)
      align-items: last baseline
      p
        max-width: 190px
        font-size: $footer-logo-name
        color: $white
      img
        width: 96px
        height: 96px
        margin-right: 30px
        +below($xs)
          width: 65px
          height: 65px
          margin-right: 15px
    .links
      min-width: 300px
      +below($xs)
        margin-top: 30px
      a
        padding: 10px
        font-size: $footer-links-font-size
        &:hover
          color: $white
        +below($x-small)
          font-size: 14px

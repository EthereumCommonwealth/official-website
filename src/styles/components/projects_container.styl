.projects-container
  background-color: $background-grey
  .projects-column
    margin-top: 35px
    flex-column()
    mixin-left-identation()
    .project
      background-color: $white
      box-shadow: 0px 6px 18px rgba(40, 53, 64, 0.06);
      border-radius: 12px;
      padding: 45px
      display: grid
      grid-template-columns: repeat(5, .6fr) repeat(5, 1fr)
      grid-template-rows: repeat(4, 1fr)
      +below($sm)
        flex-column()
        padding: 15px
        & > *
          margin-bottom: 25px
      .project-title
        flex-row(nowrap)
        align-items: center
        grid-column: 1 / 5
        img
          margin-right: 15%
          width: 50px
          height: 50px
          +below($sm)
            margin-right: 10%
        h3
          font-size: 30px
          margin: 0
          font-weight: 500
          color: #005EEB
      button
        grid-column: 2 / 4
        width: 160px
        height: 50px
        +above($sm)
          margin-top: 30px
          justify-self: center
      p
        grid-column: 6 / -1
        grid-row-start: 1
        grid-row-end: span 6
      .social-icons
        grid-row-start: 4
        grid-column-start: 1
        grid-column-end: 6
        align-self: center
        flex-row()
        img
          &:hover
            cursor: pointer
          margin-left: 15px
          width: 50px
          height: 50px

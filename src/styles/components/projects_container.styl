.callisto-logo
  background: url("../images/project-icons/callisto.svg") no-repeat

.xinfra-logo
  background: url("../images/project-icons/0xinfra.svg") no-repeat
  margin-right: 0 !important

.projects-container
  background-color: $background-grey
  .projects-column
    margin-top: 35px
    flex-column()
    mixin-left-identation()
    +below($sm)
      align-items: center
    .project
      max-width: 1000px
      margin-bottom: 40px
      background-color: $white
      box-shadow: 0px 6px 18px rgba(40, 53, 64, 0.06);
      border-radius: 12px;
      padding: 45px
      display: grid
      margin-right: 10%
      grid-template-columns: repeat(5, .6fr) repeat(5, 1fr)
      +below($sm)
        max-width: 360px
        flex-column()
        padding: 15px
        margin-right: 0
        & > *
          margin-bottom: 25px
      .project-title
        flex-row(nowrap)
        align-items: center
        grid-column: 1 / 6
        span
          margin-right: 8%
          width: 50px
          height: 50px
          +below($sm)
            margin-right: 10%
        .default-logo
          background-color: $medium-grey
          border-radius: 50%
        h3
          font-size: 30px
          margin: 0
          font-weight: 500
          color: $secondary-color
      button
        grid-column: 2 / 4
        width: 160px
        height: 50px
        +above($sm)
          margin-top: 30px
          justify-self: center
      p
        grid-column: 7 / -1
        grid-row-start: 1
        grid-row-end: span 6
      .social-icons
        grid-row-start: 4
        grid-column-start: 1
        grid-column-end: 6
        align-self: center
        flex-row()
        margin-top: 80px
        a
          margin-top: 10px
          flex-row(nowrap)
          justify-content: center
          margin-left: 15px
          i
            flex-row(nowrap)
            color: $white
            background-color: $medium-grey
            align-items: center
            justify-content: center
            padding: 0.5em
            border-radius: 100%
            font-size: 20px
            margin: 0 4px
            text-decoration: none
            transition: all 150ms ease
            &:hover
              background-color: $primary-color
          img
            width: 40px
            height: 40px
